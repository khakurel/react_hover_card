{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "baseUrl": ".",
        "outDir": "./temp",
        "noEmitOnError": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**.ts",
        "src/**.tsx"
    ]
}